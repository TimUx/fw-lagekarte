{
  "name": "fw-lagekarte",
  "version": "0.1.0-beta.5",
  "description": "Eine Lagekarte für Großeinsätze",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --linux --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "fire-department",
    "tactical-map",
    "emergency"
  ],
  "author": "TimUx <info@example.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "leaflet": "^1.9.4",
    "localforage": "^1.10.0",
    "markdown-it": "^14.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.fw-lagekarte.app",
    "productName": "Lagekarte",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "storage.js",
      "sync.js",
      "tactical-symbols.js",
      "embedded-server.js",
      "constants.js",
      "index.html",
      "readonly-viewer.html",
      "doc-viewer.html",
      "proxy-settings.html",
      "styles.css",
      "app-icon.png",
      "favicon.ico",
      "icon-192.png",
      "icon-512.png",
      "manifest.json",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "README.md",
      "QUICKSTART.md",
      "BENUTZERHANDBUCH.md",
      "FEATURES.md",
      "ARCHITEKTUR.md",
      "DOKUMENTATION.md"
    ]
  }
}
